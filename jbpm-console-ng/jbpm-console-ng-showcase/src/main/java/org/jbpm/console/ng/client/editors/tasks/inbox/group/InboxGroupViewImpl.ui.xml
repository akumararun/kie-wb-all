<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field="i18n" type="org.jbpm.console.ng.client.i18n.Constants"/>
    <ui:with field='resources' type='org.jbpm.console.ng.client.resources.ShowcaseResources'/>

    
    <b:WellForm type="INLINE">
        
        <b:TextBox
            ui:field='groupText' placeholder="group">
        </b:TextBox>
        <b:Button
            ui:field='refreshTasksButton' size="SMALL" type="PRIMARY">Refresh
        </b:Button>
                
        <b:TextBox
            ui:field='userText' placeholder="user">
        </b:TextBox>
        <b:Button
            ui:field='claimTaskButton' size="SMALL" type="PRIMARY">Claim
        </b:Button>
         
        <b:FluidContainer>
            <b:FluidRow>
                <b:Column size="12">
       
                    <c:DataGrid
                        ui:field='myGroupTaskListGrid'  />
            
                </b:Column>
            </b:FluidRow>
            
            <b:FluidRow>
                <b:Column size="12">
                    <c:SimplePager
                        ui:field='pagerGroup' />
                </b:Column>
         
            </b:FluidRow>
        </b:FluidContainer>  
           
    </b:WellForm>

</ui:UiBinder>