<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client" 
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field="i18n" type="org.jbpm.console.ng.client.i18n.Constants"/>
    <ui:with field='resources' type='org.jbpm.console.ng.client.resources.ShowcaseResources'/>

    <b:WellForm type="HORIZONTAL">
       
        <b:Fieldset>
            <b:ControlGroup>
                <b:ControlLabel for="taskId">Task Id (Mock)</b:ControlLabel> 
                <b:Controls>
                    <b:TextBox
                        ui:field='taskIdText' b:id="taskId" placeholder="task id (mock)">
                    </b:TextBox>
                </b:Controls>        
            </b:ControlGroup>      
                 

            <gwt:ScrollPanel >
                <b:FluidContainer>
                    <b:Row>
                        <b:Label type="INFO">Content</b:Label>
                        <b:FluidContainer ui:field="contentPanel">
                
                        </b:FluidContainer>
                    </b:Row>
                    <b:Row>
                        <b:Label type="INFO">Output Content</b:Label>
                        <b:FluidContainer ui:field="outputPanel">
                
                        </b:FluidContainer>
                    </b:Row>
                </b:FluidContainer>
            </gwt:ScrollPanel>
            
            <b:Button
                ui:field='addRowButton' size="SMALL" type="PRIMARY"> (+) Add Row
            </b:Button>
            <b:Button
                ui:field='saveContentButton' size="SMALL" type="PRIMARY">Save
            </b:Button>
            <b:Button
                ui:field='refreshContentButton' size="SMALL" type="PRIMARY">Refresh
            </b:Button>    
        </b:Fieldset>
        
    </b:WellForm>

</ui:UiBinder>