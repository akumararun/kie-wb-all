<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:dp="urn:import:com.google.gwt.user.datepicker.client" >

    <ui:with field="i18n" type="org.jbpm.console.ng.client.i18n.Constants"/>
    <ui:with field='resources' type='org.jbpm.console.ng.client.resources.ShowcaseResources'/>

    <gwt:DecoratorPanel>
        <gwt:VerticalPanel width="100%">
            <gwt:HorizontalPanel >
                <gwt:Label>Task ID (MOCK): </gwt:Label>
                <gwt:TextBox
                    ui:field='taskIdText'>
                </gwt:TextBox>
            </gwt:HorizontalPanel>
            <gwt:HorizontalPanel >
                <gwt:Label>User: </gwt:Label>
                <gwt:TextBox 
                    ui:field='userText'>
                </gwt:TextBox>
            </gwt:HorizontalPanel>
            <gwt:HorizontalPanel>
                <gwt:Label>Group: </gwt:Label>
                <gwt:TextBox
                    ui:field='groupText'>
                </gwt:TextBox>
            </gwt:HorizontalPanel>
            <gwt:HorizontalPanel>
                <gwt:Label>Task Name: </gwt:Label>
                <gwt:TextBox
                    ui:field='taskNameText'>
                </gwt:TextBox>
            </gwt:HorizontalPanel>
        
            <gwt:HorizontalPanel>
                <gwt:Label>Task Description </gwt:Label>
                <gwt:TextBox
                    ui:field='taskDescriptionText'>
                </gwt:TextBox>
            </gwt:HorizontalPanel>
        
            <gwt:HorizontalPanel>
                <gwt:Label>Task Priority (0 - 10): </gwt:Label>
                <gwt:TextBox
                    ui:field='taskPriorityText'>
                </gwt:TextBox>
            </gwt:HorizontalPanel>
            <gwt:HorizontalPanel>
                <gwt:Label>Sub Task Strategy: </gwt:Label>
                <gwt:TextBox
                    ui:field='subTaskStrategyText'>
                </gwt:TextBox>
            </gwt:HorizontalPanel>
            <gwt:HorizontalPanel>
                <gwt:Label>Due Date: </gwt:Label>
                <dp:DatePicker ui:field='dueDate'></dp:DatePicker>
            </gwt:HorizontalPanel>
            <gwt:HorizontalPanel>
                <gwt:Label>Sub Tasks: </gwt:Label>
                <gwt:Label>Sub Task Name: </gwt:Label>
                <gwt:TextBox
                    ui:field='subTaskNameText'>
                </gwt:TextBox>
                <gwt:Label>Sub Task Assignee: </gwt:Label>
                <gwt:TextBox
                    ui:field='subTaskAsigneeText'>
                </gwt:TextBox>
                <gwt:Button
                    ui:field='createSubTaskButton'>New Sub Task
                </gwt:Button>
            </gwt:HorizontalPanel>
            <gwt:HorizontalPanel>
                <gwt:Label>Actions: </gwt:Label>
                <gwt:Button
                    ui:field='updateTaskButton'>Update Task
                </gwt:Button>
                <gwt:Button
                    ui:field='refreshButton'>Refresh
                </gwt:Button>        
            </gwt:HorizontalPanel>    
        
        </gwt:VerticalPanel>
    </gwt:DecoratorPanel>

</ui:UiBinder>