<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with field="i18n" type="org.jbpm.console.ng.client.i18n.Constants"/>
    <ui:with field='resources' type='org.jbpm.console.ng.client.resources.ShowcaseResources'/>

    
    <b:WellForm type="HORIZONTAL">
      
        <b:Fieldset>
            <b:ControlGroup>
                <b:ControlLabel for="parentTaskId">Parent Task Id</b:ControlLabel> 
                <b:Controls>
                    <b:TextBox
                        ui:field='parentTaskIdText' b:id="parentTaskId" placeholder="parent task id">
                    </b:TextBox>
                </b:Controls>        
            </b:ControlGroup>
            <b:ControlGroup>
                <b:ControlLabel for="subTaskNameText">Sub Task Name</b:ControlLabel> 
                <b:Controls>
                    <b:TextBox
                        ui:field='subTaskNameText' b:id="subTaskNameText" placeholder="sub task name">
                    </b:TextBox>
                </b:Controls>        
            </b:ControlGroup>
            <b:ControlGroup>
                <b:ControlLabel for="subTaskAsigneeText">Sub Task Asignee</b:ControlLabel> 
                <b:Controls>
                    <b:TextBox
                        ui:field='subTaskAsigneeText' b:id="subTaskAsigneeText" placeholder="sub task asignee">
                    </b:TextBox>
                </b:Controls>        
            </b:ControlGroup>   
           
        </b:Fieldset>
        <b:Button
            ui:field='createSubTaskButton' size="SMALL" type="PRIMARY">New Sub Task
        </b:Button>
           
    </b:WellForm>   
                
            


</ui:UiBinder>