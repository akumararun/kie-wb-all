  <groupId>org.kie.modules</groupId>
  <artifactId>net-sf-josql</artifactId>
  <name>KIE EAP - net-sf-josql static module</name>
  <packaging>pom</packaging>

  <properties>
    <module.name>net.sf.josql</module.name>
    <module.type>static</module.type>
    <module.location>net/sf/josql</module.location>
    <module.slot>${project.version}</module.slot>
  </properties>

  <dependencies>

    <!-- TODO: This dependency is not resolvable in jboss nexus public repository. -->
