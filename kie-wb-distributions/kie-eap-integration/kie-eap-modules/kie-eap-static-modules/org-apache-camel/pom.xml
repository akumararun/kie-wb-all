<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kie.modules</groupId>
    <artifactId>kie-eap-static-modules</artifactId>
    <version>6.1.0-SNAPSHOT</version>
  </parent>

  <groupId>org.kie.modules</groupId>
  <artifactId>org-apache-camel</artifactId>
  <name>KIE EAP - org-apache-camel static module</name>
  <packaging>pom</packaging>

  <properties>
    <module.name>org.apache.camel</module.name>
    <module.type>static</module.type>
    <module.location>org/apache/camel</module.location>
    <!-- TODO: This dependencies are not resolvable in jboss nexus public repository, so the static dependency manually. -->
    <module.dependencies>net.sf.josql:${project.version}</module.dependencies>
    <module.slot>${project.version}</module.slot>
  </properties>

  <dependencies>

    <dependency>
      <groupId>org.apache.camel</groupId>
      <artifactId>camel-josql</artifactId>
      <version>2.12.1</version>
      <type>jar</type>
      <!-- TODO: This dependencies are not resolvable in jboss nexus public repository. -->
      <exclusions>
        <exclusion>
          <groupId>net.sf.josql</groupId>
          <artifactId>gentlyweb-utils</artifactId>
        </exclusion>
        <exclusion>
          <groupId>net.sf.josql</groupId>
          <artifactId>josql</artifactId>
        </exclusion>
      </exclusions>
    </dependency>


    <dependency>
      <groupId>org.apache.camel</groupId>
      <artifactId>camel-core</artifactId>
      <version>2.10.3</version>
      <type>jar</type>
    </dependency>

    <dependency>
      <groupId>org.apache.camel</groupId>
      <artifactId>apt</artifactId>
      <version>2.12.1</version>
      <type>jar</type>
    </dependency>

    <dependency>
      <groupId>org.apache.camel</groupId>
      <artifactId>spi-annotations</artifactId>
      <version>2.12.1</version>
      <type>jar</type>
    </dependency>


  </dependencies>
</project>
