<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:cellview="urn:import:com.google.gwt.user.cellview.client">

  <ui:with field="i18n" type="org.kie.workbench.projecteditor.client.resources.i18n.ProjectEditorConstants"/>
  <ui:with field="resources" type="org.kie.workbench.projecteditor.client.resources.ProjectEditorResources"/>

  <ui:style>
    .header {
      padding: 5px 5px 5px 5px;
      background-color: rgb(204, 204, 204);
      font-size: 24px;
    }
  </ui:style>

  <gwt:DockLayoutPanel unit="PX" height="100%" width="100%">
    <gwt:north size="40">
      <gwt:HTMLPanel>
        <div class='{style.header}'>
          <div style="float:left; ">
            <gwt:Label text='{i18n.Dependencies}'/>
          </div>
          <div style="float:right;">
            <gwt:Button ui:field="addDependencyButton" text='{i18n.Add}'/>
            <gwt:Button ui:field="addFromRepositoryDependencyButton" text='{i18n.AddFromRepository}'/>
          </div>
          <div style="clear:both;"/>
        </div>
      </gwt:HTMLPanel>
    </gwt:north>
    <gwt:center>
      <cellview:DataGrid ui:field="dataGrid"/>
    </gwt:center>
  </gwt:DockLayoutPanel>
</ui:UiBinder>
