<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:metadata='urn:import:org.kie.workbench.common.widgets.metadata.client.widget'
             xmlns:discussion='urn:import:org.kie.workbench.common.screens.socialscreen.client.discussion'
             xmlns:bootstrap='urn:import:com.github.gwtbootstrap.client.ui'>

  <ui:with field="i18n" type="org.kie.workbench.common.screens.socialscreen.client.resources.i18n.OverviewConstants"/>

  <ui:with field="i18nMetadata" type="org.kie.workbench.common.widgets.metadata.client.resources.i18n.MetadataConstants"/>

  <ui:style>
    .base {
      padding: 10px 10px 10px 10px;
    }

    .previewBox {
      font-family: monospace;
      font-size: 10px;
      width: 600px;
      background-color: #fffff0 !important;
    }

    .firstColumn {
      float: left;
      width: 120px;
    }

    .discussion {
      height: 600px;
      border-left: solid black 1px;
    }
  </ui:style>

  <gwt:HTMLPanel styleName='{style.base}'>
    <div style="float:left">

      <div>
        <div class='{style.firstColumn}'>
          <gwt:Label text='{i18nMetadata.TypeMetaData}'/>
        </div>
        <div style="float:left;">
          <gwt:Label ui:field="resourceType"/>
        </div>
      </div>
      <div style="clear:both;">
        <div class='{style.firstColumn}'>
          <gwt:Label text='{i18nMetadata.Description}'/>
        </div>
        <div style="float:left;">
          <bootstrap:TextArea ui:field="description" placeholder="No description yet - what does this rule do?" width="380px" visibleLines="2"/>
        </div>
      </div>
      <div style="clear:both;">
        <div class='{style.firstColumn}'>
          <gwt:Label text='{i18n.UsedInProjects}'/>
        </div>
        <div style="float:left;">
          <gwt:Label ui:field="projects"/>
        </div>
      </div>
      <div style="clear:both;">
        <div class='{style.firstColumn}'>
          <gwt:Label text='{i18nMetadata.LastModified}'/>
        </div>
        <div style="float:left;">
          <gwt:Label ui:field="lastModifiedLabel"/>
        </div>
      </div>
      <div style="clear:both;">
        <div class='{style.firstColumn}'>
          <gwt:Label text='{i18nMetadata.CreatedOnMetaData}'/>
        </div>
        <div style="float:left;">
          <gwt:Label ui:field="createdLabel"/>
        </div>
      </div>
    </div>
    <div style="clear:both;">
      <gwt:TabPanel ui:field="tabPanel">
        <gwt:Tab text='{i18n.Preview}'>
          <gwt:FlowPanel>
            <bootstrap:TextArea ui:field="filePreview" enabled="false" styleName='{style.previewBox}' visibleLines="15"/>
          </gwt:FlowPanel>
        </gwt:Tab>
        <gwt:Tab text='{i18nMetadata.Metadata}'>
          <gwt:FlowPanel>
            <metadata:MetadataWidget ui:field="metadata" width="600px"/>
          </gwt:FlowPanel>
        </gwt:Tab>
      </gwt:TabPanel>
    </div>

    <div class='{style.discussion}' style="float:left">
      <discussion:DiscussionWidgetPresenter ui:field="discussionArea"/>
    </div>

  </gwt:HTMLPanel>

</ui:UiBinder>
