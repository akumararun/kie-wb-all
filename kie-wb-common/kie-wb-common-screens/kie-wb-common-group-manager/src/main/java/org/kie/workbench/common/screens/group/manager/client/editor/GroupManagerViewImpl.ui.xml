<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

  <ui:with field="i18n" type="org.kie.workbench.common.screens.group.manager.client.resources.i18n.GroupManagerConstants"/>

  <b:FluidContainer>
    <b:FluidRow>
      <b:Column size="3">
        <b:Label text="{i18n.Groups}"/>
      </b:Column>
      <b:Column size="3">
        <b:Label text="{i18n.GroupRepositories}"/>
      </b:Column>
      <b:Column size="1"/>
      <b:Column size="3">
        <b:Label text="{i18n.AllRepositories}"/>
      </b:Column>
    </b:FluidRow>
    <b:FluidRow>
      <b:Column size="3">
        <b:ListBox ui:field="lstGroups" visibleItemCount="10"/>
      </b:Column>
      <b:Column size="3">
        <b:ListBox ui:field="lstGroupRepositories" visibleItemCount="10"/>
      </b:Column>
      <b:Column size="1">
        <g:VerticalPanel>
          <b:Button ui:field="btnAddRepository" icon="CHEVRON_LEFT"></b:Button>
          <b:Button ui:field="btnRemoveRepository" icon="CHEVRON_RIGHT"></b:Button>
        </g:VerticalPanel>
      </b:Column>
      <b:Column size="3">
        <b:ListBox ui:field="lstAvailableRepositories" visibleItemCount="10"/>
      </b:Column>
    </b:FluidRow>

    <g:HTMLPanel>
      <p/>
    </g:HTMLPanel>

    <b:Button ui:field="btnAddGroup" icon="PLUS_SIGN" type="PRIMARY" text="{i18n.AddGroup}"></b:Button>
    <b:Button ui:field="btnDeleteGroup" icon="MINUS_SIGN" type="DANGER" text="{i18n.DeleteGroup}"></b:Button>

  </b:FluidContainer>

</ui:UiBinder>