<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>

  <ui:with field="i18n" type="org.drools.guvnor.client.messages.Constants"/>

  <gwt:HTMLPanel tag="table">
    <tr>
      <td>
        <gwt:Label text='{i18n.Name}'/>
      </td>
      <td>
        <gwt:TextBox ui:field="nameTextBox"/>
      </td>
    </tr>
    <tr>
      <td>
        <gwt:Label text='{i18n.Url}'/>
      </td>
      <td>
        <gwt:TextBox ui:field="urlTextBox"/>
      </td>
    </tr>
    <tr>
      <td colspan="2" style="text-align:right;">
        <gwt:Button ui:field="saveButton" text='{i18n.Save}' />
        <gwt:Button ui:field="cancelButton" text='{i18n.Cancel}' />
      </td>
    </tr>
  </gwt:HTMLPanel>

</ui:UiBinder>