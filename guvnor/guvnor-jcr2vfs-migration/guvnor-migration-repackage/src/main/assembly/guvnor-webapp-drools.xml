<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>guvnor-webapp-drools</id>
  <formats>
    <format>jar</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/guvnor-webapp-drools-unpacked/WEB-INF/classes/</directory>
      <outputDirectory/>
      <excludes>
        <exclude>org/drools/guvnor/client/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/guvnor-webapp-drools-unpacked/WEB-INF/</directory>
      <outputDirectory>META-INF</outputDirectory>
      <includes>
        <include>beans.xml</include>
      </includes>
    </fileSet>
  </fileSets>

</assembly>
