<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:bootstrap='urn:import:com.github.gwtbootstrap.client.ui'>

  <ui:with field="i18n"
           type="org.guvnor.asset.management.client.i18n.Constants"/>
 

  <ui:style>
    .mandatory-field {
      color: red;
    }
  </ui:style>

  <gwt:HTMLPanel>
    <bootstrap:Well>
      <bootstrap:Fieldset>


        
          
        <bootstrap:ControlGroup ui:field="targetBranchTextGroup">
          <bootstrap:ControlLabel for="targetBranchText">
            <span class="{style.mandatory-field}">*</span>
            <ui:text from="{i18n.Target_Branch}"/>
          </bootstrap:ControlLabel>
          <bootstrap:Controls>
            <bootstrap:TextBox bootstrap:id="targetBranchText" ui:field="targetBranchText" placeholder="{i18n.Target_Branch}"/>
            <bootstrap:HelpInline ui:field="targetBranchTextHelpInline"/>
          </bootstrap:Controls>
        </bootstrap:ControlGroup>

       
      </bootstrap:Fieldset>
    </bootstrap:Well>
  </gwt:HTMLPanel>
</ui:UiBinder>