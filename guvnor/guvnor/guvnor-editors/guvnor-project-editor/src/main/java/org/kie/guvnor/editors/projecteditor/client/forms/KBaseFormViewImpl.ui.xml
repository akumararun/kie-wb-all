<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:editor='urn:import:org.kie.guvnor.editors.projecteditor.client.forms'>

  <ui:with field="i18n" type="org.kie.guvnor.editors.projecteditor.client.resources.i18n.ProjectEditorConstants"/>
  <ui:with field="resources" type="org.kie.guvnor.editors.projecteditor.client.resources.ProjectEditorResources"/>

  <gwt:HTMLPanel width="100%">
    <div>
      <div style='float:left'>
        <div style='float:left;'>
          <gwt:Label text="{i18n.Name}"/>
        </div>
        <div style='float:left;'>
          <gwt:Label ui:field="nameLabel"/>
        </div>
        <div style='clear:both;'/>
      </div>
      <div style="float:left" class='{resources.mainCss.selectionBox}'>
        <gwt:Label text="{i18n.EqualsBehavior}"/>
        <div>
          <gwt:RadioButton ui:field="equalsBehaviorIdentity" name="equalsBehavior" text="{i18n.Identity}"/>
        </div>
        <div>
          <gwt:RadioButton ui:field="equalsBehaviorEquality" name="equalsBehavior" text="{i18n.Equality}"/>
        </div>
      </div>
      <div style="float:left" class='{resources.mainCss.selectionBox}'>
        <div>
          <gwt:Label text="{i18n.EventProcessingMode}"/>
          <div>
            <gwt:RadioButton ui:field="eventProcessingModeStream" name="eventProcessingMode" text="{i18n.Stream}"/>
          </div>
          <div>
            <gwt:RadioButton ui:field="eventProcessingModeCloud" name="eventProcessingMode" text="{i18n.Cloud}"/>
          </div>
        </div>
      </div>
      <div style='clear:both;'/>
    </div>
    <gwt:TabLayoutPanel barHeight="50" barUnit="PX" height="400px" width="600">
      <gwt:tab>
        <gwt:header>
          <ui:text from="{i18n.StatefulKSessions}"/>
        </gwt:header>
        <editor:KSessionsPanel ui:field="statefulSessionsPanel"/>
      </gwt:tab>
      <gwt:tab>
        <gwt:header>
          <ui:text from="{i18n.StatelessKSessions}"/>
        </gwt:header>
        <editor:KSessionsPanel ui:field="statelessSessionsPanel"/>
      </gwt:tab>
    </gwt:TabLayoutPanel>
  </gwt:HTMLPanel>

</ui:UiBinder>
