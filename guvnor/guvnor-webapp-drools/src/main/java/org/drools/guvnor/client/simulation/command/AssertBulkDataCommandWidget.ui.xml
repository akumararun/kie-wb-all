<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="i18n" type="org.kie.guvnor.client.messages.Constants" />
  <ui:with field="simulationResources" type="org.kie.guvnor.client.simulation.resources.SimulationResources" />

  <gwt:FlowPanel ui:field="flowPanel" width="100%">
    <gwt:HTMLPanel>
      <div>
        <gwt:Image resource="{simulationResources.assertBulkData}" altText="" styleName="{simulationResources.style.commandImage}"/>
        <gwt:Label text="{i18n.AssertBulkData}" styleName="{simulationResources.style.commandLabel}"/>
      </div>
    </gwt:HTMLPanel>
  </gwt:FlowPanel>

</ui:UiBinder>
