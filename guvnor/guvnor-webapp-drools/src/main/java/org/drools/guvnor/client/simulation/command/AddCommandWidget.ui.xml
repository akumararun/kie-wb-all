<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="i18n" type="org.drools.guvnor.client.messages.Constants" />
  <ui:with field="simulationResources" type="org.drools.guvnor.client.simulation.resources.SimulationResources" />

  <gwt:VerticalPanel styleName="{simulationResources.style.addCommandWidget}">
    <gwt:cell>
      <gwt:FlowPanel>
        <gwt:PushButton ui:field="addInsertBulkDataButton" addStyleNames="{simulationResources.style.addCommandButton}">
          <gwt:upFace image="{simulationResources.insertBulkData}"/>
        </gwt:PushButton>
        <gwt:Label text="{i18n.InsertBulkData}" styleName="{simulationResources.style.commandLabel}"/>
      </gwt:FlowPanel>
    </gwt:cell>
    <gwt:cell>
      <gwt:FlowPanel>
        <gwt:PushButton ui:field="addFireAllRulesButton" addStyleNames="{simulationResources.style.addCommandButton}">
          <gwt:upFace image="{simulationResources.fireAllRules}"/>
        </gwt:PushButton>
        <gwt:Label text="{i18n.FireAllRules}" styleName="{simulationResources.style.commandLabel}"/>
      </gwt:FlowPanel>
    </gwt:cell>
    <gwt:cell>
      <gwt:FlowPanel>
        <gwt:PushButton ui:field="addAssertBulkDataButton" addStyleNames="{simulationResources.style.addCommandButton}">
          <gwt:upFace image="{simulationResources.assertBulkData}"/>
        </gwt:PushButton>
        <gwt:Label text="{i18n.AssertBulkData}" styleName="{simulationResources.style.commandLabel}"/>
      </gwt:FlowPanel>
    </gwt:cell>
  </gwt:VerticalPanel>

</ui:UiBinder>
