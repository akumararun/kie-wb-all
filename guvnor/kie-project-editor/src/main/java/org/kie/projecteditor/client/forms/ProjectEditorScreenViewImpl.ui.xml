<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:editor='urn:import:org.kie.projecteditor.client.forms'>

  <ui:with field="i18n" type="org.kie.projecteditor.client.resources.constants.ProjectEditorConstants"/>

  <gwt:HTMLPanel width="100%">
        <div>
            <gwt:HorizontalPanel>
                <gwt:Button text="{i18n.AddKBase}"/>
                <gwt:Button text="{i18n.DeleteKBase}"/>
            </gwt:HorizontalPanel>
        </div>
        <div>
            <div style='float:left; width:25%;'>
                <gwt:ListBox ui:field="kbaseList" visibleItemCount="30" width="100%"/>
            </div>
            <div style='float:left; padding-left:30px; width:70%;'>
                <editor:KnowledgeBaseConfigurationForm ui:field="form"/>
            </div>
            <div style='clear:both;'/>
        </div>
    </gwt:HTMLPanel>

</ui:UiBinder>
