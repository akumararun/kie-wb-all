<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="i18n" type="org.drools.workbench.screens.guided.dtree.client.resources.i18n.GuidedDecisionTreeConstants"/>

  <ui:style>
    .fieldValues {
      width: 100%;
      height: 200px;
      border-width: 1px;
    }
  </ui:style>

  <b:Well>

    <b:ControlGroup ui:field="bindingGroup">
      <b:ControlLabel for="binding">
        <gwt:Label text="{i18n.actionUpdate}:"/>
      </b:ControlLabel>
      <b:Controls>
        <b:ListBox ui:field="bindingListBox"/>
      </b:Controls>
    </b:ControlGroup>

    <b:ControlGroup ui:field="modifyGroup">
      <b:Controls>
        <gwt:HorizontalPanel>
          <b:CheckBox ui:field="modifyCheckBox" text="{i18n.actionUpdateEngineWithChanges}"/>
          <b:Popover placement="RIGHT" trigger="HOVER" heading="{i18n.actionUpdateHeader}" text="{i18n.actionUpdateDescription}">
            <b:Icon type="QUESTION_SIGN" addStyleNames="help-inline"></b:Icon>
          </b:Popover>
        </gwt:HorizontalPanel>
      </b:Controls>
    </b:ControlGroup>

    <b:ControlGroup ui:field="fieldValuesGroup">
      <b:ControlLabel for="binding">
        <gwt:Label text="{i18n.actionFieldValues}:"/>
      </b:ControlLabel>
      <b:Controls>
        <b:Well>
          <gwt:ScrollPanel styleName="{style.fieldValues}">
            <gwt:VerticalPanel ui:field="containerFieldValues"/>
          </gwt:ScrollPanel>
          <b:Button ui:field="addFieldValueButton" icon="PLUS_SIGN" type="DEFAULT" text="{i18n.addFieldValue}"></b:Button>
        </b:Well>
      </b:Controls>
    </b:ControlGroup>

  </b:Well>

</ui:UiBinder>